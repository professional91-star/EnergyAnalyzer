@{
    ViewData["Title"] = "Giriş";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YBT Enerji - Giriş</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #0a1628 0%, #1a2744 50%, #0d1f3c 100%);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .login-container {
            width: 100%;
            max-width: 420px;
            padding: 20px;
        }
        .login-card {
            background: linear-gradient(145deg, #1f2940, #16213e);
            border: 1px solid #2a3f5f;
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
        }
        .login-header {
            text-align: center;
            margin-bottom: 35px;
        }
        .contectus-logo {
            width: 200px;
            height: auto;
            margin-bottom: 30px;
            border-radius: 8px;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
        .login-logo {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            margin-top: 10px;
            margin-bottom: 20px;
            border: 3px solid #4fc3f7;
            padding: 5px;
            background: #fff;
            display: block;
            margin-left: auto;
            margin-right: auto;
        }
        .login-title {
            color: #fff;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 5px;
        }
        .login-subtitle {
            color: #90caf9;
            font-size: 0.9rem;
        }
        .form-group {
            margin-bottom: 25px;
            position: relative;
        }
        .form-group label {
            display: block;
            color: #90caf9;
            font-size: 0.85rem;
            margin-bottom: 8px;
            font-weight: 500;
        }
        .form-group .input-wrapper {
            position: relative;
        }
        .form-group .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #4fc3f7;
            font-size: 1rem;
        }
        .form-group input {
            width: 100%;
            padding: 14px 15px 14px 45px;
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid #2a3f5f;
            border-radius: 10px;
            color: #fff;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        .form-group input:focus {
            outline: none;
            border-color: #4fc3f7;
            box-shadow: 0 0 15px rgba(79, 195, 247, 0.2);
        }
        .form-group input::placeholder {
            color: #6c757d;
        }
        .btn-login {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, #1565c0 0%, #0d47a1 100%);
            border: none;
            border-radius: 10px;
            color: #fff;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        .btn-login:hover {
            background: linear-gradient(135deg, #1976d2 0%, #1565c0 100%);
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(21, 101, 192, 0.4);
        }
        .btn-login:active {
            transform: translateY(0);
        }
        .alert-error {
            background: rgba(244, 67, 54, 0.1);
            border: 1px solid #f44336;
            border-radius: 10px;
            padding: 12px 15px;
            margin-bottom: 25px;
            color: #f44336;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .footer-text {
            text-align: center;
            margin-top: 30px;
            color: #6c757d;
            font-size: 0.8rem;
        }
        .footer-text a {
            color: #4fc3f7;
            text-decoration: none;
        }
        /* Animation */
        .login-card {
            animation: fadeInUp 0.5s ease;
        }
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <img src="/images/cgt.jpg" alt="Contectus Global" class="contectus-logo">
                <img src="/images/logoybt.jpg" alt="YBT Enerji" class="login-logo">
                <h1 class="login-title">YBT ENERJİ</h1>
                <p class="login-subtitle">Enerji İzleme Sistemi</p>
            </div>

            @if (ViewData["Error"] != null)
            {
                <div class="alert-error">
                    <i class="fas fa-exclamation-circle"></i>
                    @ViewData["Error"]
                </div>
            }

            <form method="post" asp-action="Login">
                <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                
                <div class="form-group">
                    <label for="username">Kullanıcı Adı</label>
                    <div class="input-wrapper">
                        <i class="fas fa-user input-icon"></i>
                        <input type="text" id="username" name="username" placeholder="Kullanıcı adınızı girin" required autofocus>
                    </div>
                </div>

                <div class="form-group">
                    <label for="password">Şifre</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock input-icon"></i>
                        <input type="password" id="password" name="password" placeholder="Şifrenizi girin" required>
                    </div>
                </div>

                <button type="submit" class="btn-login">
                    <i class="fas fa-sign-in-alt"></i>
                    Giriş Yap
                </button>
            </form>

            <div class="footer-text">
                &copy; 2026 Contectus Global - Tüm hakları saklıdır.
            </div>
        </div>
    </div>
</body>
</html>
